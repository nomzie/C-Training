using System;

namespace Mod1_Lab1
{
    class Program
    {
        static void Main(string[] args)
        {
            // create a person
            // create variables of different data types
            // initialize with a "default" value

            string firstName = "";
            string lastName = "";
            int age = 0;
            string street = "";
            string city = "";
            string country = "";
            DateTime birthDate;

            // Assign some values
            firstName = "Tom";
            lastName = "Sawyer";
            age = 18;
            street = "123 Fourth Street";
            city = "Kentucky";
            country = "Wakanda";
            birthDate = new DateTime(1993, 6, 1);

            // output to the console window

            // use string concatenation
            Console.WriteLine(firstName + " " + lastName);

            // use placeholder style
            Console.WriteLine("{0} years old",age);

            // use string interpolation
            // NOTE: This line of code only works with Visual Studio 2015 or C# 6.0 and later.
            // If you are using an earlier version, then comment out this line of code.
            Console.WriteLine($"Born on {birthDate}");
            Console.WriteLine("Address: " + street + ", " + city + ", " + country);
        }
    }
}
